{
	"name": "Menu/Overlay Tweaker",
	"author": "Samuel Scerri",
	"target": "Tweak",
	"version": "v1.0",
	"description": "Menu/Overlay Tweaker",
	"manifest_version": 5,
	"inject": {},
	"dependencies": {},
	"patches": {
		"Fullscreen": {
			"type": "checkbox",
			"default": "No",
			"values": {
				"Yes": {
					"fullscreen.css": [
						"MainMenu"
					]
				},
				"No": {}
			},
			"components": []
		},
		"Hide Overlay": {
			"type": "checkbox",
			"default": "No",
			"values": {
				"Yes": {
					"hideoverlay.css": [
						"MainMenu"
					]
				},
				"No": {}
			},
			"components": []
		}
	}
}