{
	"name": "Menu/Overlay Tweaker",
	"author": "Samuel Scerri",
	"target": "Tweak",
	"version": "v1.0",
	"description": "Various options to customize menu and in-game overlay",
	"manifest_version": 5,
	"inject": {},
	"dependencies": {},
	"patches": {
		"Fullscreen": {
			"type": "checkbox",
			"default": "No",
			"values": {
				"Yes": {
					"fullscreen.css": [
						"MainMenu",
						"SP",
						"QuickAccess",
						"SteamLibraryWindow|Steam"
					]
				},
				"No": {}
			},
			"components": []
		},
		"Transition": {
			"type": "slider",
			"default": "Instant",
			"values": {
				"Instant": {
					"instant.css": [
						"MainMenu",
						"SP",
						"QuickAccess",
						"SteamLibraryWindow|Steam"
					]
				},
				"2x": {
					"transition.css": [
						"MainMenu",
						"SP",
						"SteamLibraryWindow|Steam",
						"QuickAccess"
					],
					"--transition-duration": [
						"2",
						"SP",
						"QuickAccess",
						"MainMenu",
						"SteamLibraryWindow|Steam"
					]
				},
				"3x": {
					"transition.css": [
						"MainMenu",
						"SP",
						"QuickAccess"
					],
					"--transition-duration": [
						"3",
						"MainMenu",
						"SP",
						"QuickAccess",
						"SteamLibraryWindow|Steam"
					]
				},
				"4x": {
					"transition.css": [
						"MainMenu",
						"SP",
						"SteamLibraryWindow|Steam",
						"QuickAccess"
					],
					"--transition-duration": [
						"4",
						"SP",
						"MainMenu",
						"QuickAccess",
						"SteamLibraryWindow|Steam"
					]
				}
			},
			"components": []
		}
	}
}